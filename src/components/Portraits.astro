---
import Portrait from "./Portrait.astro";

type PortraitData = {
  person: string;
  src: string;
};

interface Props {
  heading: string;
  portraits: PortraitData[];
}

const { heading, portraits } = Astro.props;
---

<figure
  role="group"
  aria-labelledby="group-figures"
  class="grid grid-cols-3 gap-12"
>
  <figcaption class="text-6xl col-span-full" id="group-figures">
    {heading}
  </figcaption>

  {portraits.map(({ person, src }) => <Portrait {person} {src} />)}
</figure>
