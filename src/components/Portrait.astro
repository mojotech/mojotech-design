---
// js
interface Props {
    imgSrc: string;
    description: string;
}
const { description, imgSrc } = Astro.props
---

<figure class="flex flex-col gap-4">
    <img src={imgSrc} class="aspect-square" alt={`a portrait of team member ${description}`} />
    <figcaption class="whitespace-nowrap capitalize">{description}</figcaption>
</figure>
