---
interface Props {
  src: string;
  person: string;
}
const { person, src } = Astro.props;
---

<figure class="flex flex-col gap-4">
  <img
    {src}
    class="aspect-square"
    alt={`a portrait of team member ${person}`}
  />
  <figcaption class="whitespace-nowrap capitalize">{person}</figcaption>
</figure>
